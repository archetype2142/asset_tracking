<p id="notice"><%= notice %></p>

<h1>Centrals</h1>

<table class="table table-striped table-dark">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Room</th>
      <th scope="col">Room Name</th>
    </tr>
  </thead>
  <tbody>
    <% @centrals.each do |central| %>
      <tr>
        <td><%= central.id %></td>
        <td><%= central.room_id %></td>
        <td><%= central.room_name %></td>
        <% if user_signed_in? %>
        <td><%= link_to 'Edit', edit_central_path(central) %></td>
        <td><%= link_to 'Destroy', central, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Central', new_central_path, class: "btn btn-light" %>
